* Description: This program uses the button on the MSP432 and toggles through the Red,
* Green, and Blue LED's using a 1 second delay.
*
**************************************************************************************/


#include "msp.h"
#include <stdlib.h>
#include <stdio.h>



uint8_t init_mask = 0b00000111;

int delay(int n);
uint8_t debounce();
void redState();
void greenState();
void blueState();
void LED();


void main(void)
{
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;     // stop watchdog timer




    P1->SEL1 &= ~2;
    P1->SEL0 &= ~2;
    P1->DIR &= ~2;
    P1->REN |= 2;
    P1->OUT |= 2;

    P2->SEL1 &= ~init_mask;
    P2->SEL0 &= ~init_mask;
    P2->DIR |= init_mask;


    while(1){
        LED();
    }

}

void LED(){
        int i;
        int j = 0;
        int k = 1000;
        static unsigned int state;
        enum State_enum {OFF, RED, GREEN, BLUE};

        i = debounce();

                       switch(state){
                       case OFF:
                           if(i){
                               state = RED;
                           }
                           else{
                               P2OUT &= ~init_mask;
                           }
                           break;
                       case RED:
                           if((P1IN & BIT1) == 0){
                               redState();
                               j = delay(k);
                               if(j == 1)
                               redState();
                               else{
                                   P2OUT &= ~redLED;
                                   state = GREEN;
                               }
                           }
                           else if(P1IN & BIT1){
                               redState();
                           }
                           else if(i){
                               P2OUT &= ~redLED;
                               state = GREEN;
                           }
                           break;
                       case GREEN:
                           if((P1IN & BIT1) == 0){
                               greenState();
                               j = delay(k);
                               if(j == 1)
                                   greenState();
                               else{
                                   P2OUT &= ~greenLED;
                                   state = BLUE;
                               }
                           }
                           else if(P1IN & BIT1){
                               greenState();
                           }
                           else if(i){
                               P2OUT &= ~greenLED;
                               state = BLUE;
                           }
                           break;
                       case BLUE:
                           if((P1IN & BIT1) == 0){
                            blueState();
                             j = delay(k);
                             if(j == 1)
                                blueState();
                             else{
                                P2OUT &= ~blueLED;
                                state = RED;
                               }
                           }
                             else if(P1IN & BIT1){
                                 blueState();
                             }
                             else if(i){
                                 P2OUT &= ~blueLED;
                                 state = RED;
                             }
                           break;


                       }




}
uint8_t debounce(){

    static uint16_t pinVal = 0;//making variable low

    pinVal = (pinVal<<1) | ((P1IN & BIT1) / BIT1) | 0xf800;
    __delay_cycles(5);

    if(pinVal == 0xfc00)
        return 1;


    return 0; //returning 0 if not pushed and 1 if pushed

}

int delay(int n){
    int i;
    for(i = 0; i < n; i++){
        if((P1IN & BIT1) == 0){
            return 1;
        }
        __delay_cycles(3000);
    }
    return 0;
}

void redState(){
    P2OUT |= redLED;

}
void blueState(){
    P2OUT |= blueLED;
}
void greenState(){
    P2OUT |= greenLED;
}
