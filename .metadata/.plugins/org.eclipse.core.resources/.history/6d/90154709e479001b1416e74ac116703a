#include "msp.h"
#include <stdio.h>
#include <stdlib.h>


/**
 * main.c
 */

uint8_t Keypad_Read(void);
void SysTick_Delay(uint16_t delayms);
void SysTick_Init();
uint8_t num, pressed;
void Print_Keys();


void main(void)
{
	WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer

	P4->SEL0 &= ~0xF;
	P4->SEL1 &= ~0xF;
	P4->DIR &= ~0xF;
	P4->REN |= 0xF;
	P4->OUT |= 0xF;

	P4->SEL0 &= ~0x70;
	P4->SEL1 &= ~0x70;
	P4->DIR &= ~0x70;

	SysTick_Init();



	pressed = Read_Keypad();
	if(pressed){
	    Print_Keys();
	    __delay_cycles(30000);
	}




}
void SysTick_Init(){
    //systick init
        SysTick->CTRL = 0;
        SysTick->LOAD = 0x00FFFFFF;
        SysTick->VAL = 0;
        SysTick->CTRL = 0x00000005;



}
void SysTick_Delay(uint16_t delayms){


    SysTick->LOAD = ((3000 * delayms)-1);//using user input for delay
    SysTick->VAL = 0;
    while((SysTick->CTRL & 0x00010000)== 0);
    SysTick->CTRL = 0;//turn timer off
}

uint8_t Keypad_Read(void){
    uint8_t colu, row;

    for(colu = 0; colu< 3; colu++){
        P4->DIR = 0x00;
        P4->DIR |= BIT(4+colu);
        P4->OUT &= ~BIT(4+colu);

        SysTick_Delay(10);
        row = P4->IN & 0x0F;

        while(!(P4->IN & BIT0) | !(P4->IN & BIT1) | !(P4->IN & BIT2) | !(P4->IN & BIT3));

        if(row != 0x0F) break;
    }

    P4->DIR &= ~0x00;
    if(colu == 3){
        return 0;
    }

    if(row == 0x0E){
       num = colu +1;
    }
    if(row == 0x0D){
       num = 3 + colu +1;
    }
    if(row == 0x0B){
       num = 6 + colu +1;
    }
    if(row == 0x07){
       num = 9 + colu +1;
    }
    return 1;
}
void Print_Keys(void){
    if(num==12) printf("[#]\n");
    if(num==11) printf("[0]\n");
    if(num==10) printf("[*]\n");
    if(num<10) printf("[%d]\n", num);
}
