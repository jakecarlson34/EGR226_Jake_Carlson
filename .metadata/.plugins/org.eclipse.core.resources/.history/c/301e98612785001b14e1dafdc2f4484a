#include "msp.h"
#include<stdlib.h>
#include<stdio.h>



void main(void)
{
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;     // stop watchdog timer



    double dutyCyc = 25;
    uint16_t b;

    P2->SEL1 &=~BIT4;
    P2->SEL0 &=~BIT4;
    P2->DIR |= BIT4;

    TIMER_A0->CCR[0] = 1000-1;
    TIMER_A0->CCTL[1] = 0b00 0000 0111 0000 ;
    TIMER_A0->CCR[1] = 500;
    TIMER_A0->CTL = 0b0000 0010 0001 0100;

    while(1){
        b = ((dutyCyc/10)*37500);
        TIMER_A0->CCR[1] = b;


    }
}



